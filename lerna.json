{
  "packages": [
    "packages/*"
  ],
  "version": "0.9.1",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "allowBranch": [
        "main",
        "master"
      ],
      "conventionalCommits": true,
      "gitRemote": "origin",
      "message": "chore(release): %s"
    }
  },
  "useWorkspaces": true,
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
